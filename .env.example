# PropertyHub Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED: Database Configuration
# =============================================================================
DATABASE_URL=postgres://user:password@localhost:5432/propertyhub?sslmode=disable

# =============================================================================
# Server Configuration
# =============================================================================
PORT=8080
ENVIRONMENT=development
LOG_LEVEL=info

# =============================================================================
# AWS Configuration (Required for Email/SMS)
# =============================================================================
# AWS region for SES and SNS services
AWS_REGION=us-east-1

# AWS credentials (IAM user with SES and SNS permissions)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Verified sender email in AWS SES (must be verified in SES console)
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# Phone number for SMS sending via SNS (optional, E.164 format)
AWS_SNS_FROM_PHONE=+15555555555

# =============================================================================
# Redis Configuration (Optional, enables caching and batch processing)
# =============================================================================
REDIS_URL=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Note: Additional configuration is stored in the database system_settings table
# including JWT secrets, API keys, SMTP settings, and business information.
# =============================================================================
